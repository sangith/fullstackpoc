{
  "name": "backend-journal-metadata",
  "version": "1.0.0",
  "description": "Journal Metadata API service",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:pact": "jest --testMatch \"**/*.pact.test.ts\"",
    "test:api": "newman run postman_collection.json",
    "dynamodb:start": "docker run -d -p 8000:8000 --name dynamodb-local amazon/dynamodb-local || true",
    "dynamodb:create-table": "node scripts/create-table.js",
    "dev:with-dynamodb": "npm run dynamodb:start && npm run dynamodb:create-table && node scripts/insert-sample-data.js && npm run dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "aws-sdk": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^10.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "newman": "^6.0.0"
  }
}
